@page
@model RestoStockDB.Pages.Proveedor.IndexModel

@{
    ViewData["Title"] = "Index Proveedores";
}

<h1>PROVEEDORES</h1>

<p>
    <a asp-page="Create" class="btn btn-success">CREAR NUEVO</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].NombreEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Contacto)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Telefono)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Email)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Direccion)  
            </th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Proveedor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)  

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)  

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)  

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)  

                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-danger">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
                <td>
                    <span></span>
                </td>
            </tr>
        }
    </tbody>
</table>

