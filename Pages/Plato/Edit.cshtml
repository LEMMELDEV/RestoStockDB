@page
@model RestoStockDB.Pages.Plato.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Editar</h1>
<h4>Platos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Platos.Id" />
            <div class="form-group">
                <label asp-for="Platos.Nombre" class="control-label"></label>
                <input asp-for="Platos.Nombre" class="form-control" />
                <span asp-validation-for="Platos.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Platos.PrecioVenta" class="control-label"></label>
                <input asp-for="Platos.PrecioVenta" class="form-control" />
                <span asp-validation-for="Platos.PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Platos.Descripcion" class="control-label"></label>
                <input asp-for="Platos.Descripcion" class="form-control" />
                <span asp-validation-for="Platos.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}